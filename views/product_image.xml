<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="view_product_image_tree">
      <field name="name">product.image.tree</field>
      <field name="model">product.image</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Imágenes">
          <field name="name"/>
          <field name="product_tmpl_id"/>
          <field name="product_attribute_id"/>
          <field name="meli_imagen_id"/>
          <field name="meli_imagen_link"/>
          <field name="meli_pub"/>
          <!-- <field name="image" widget="image"/> -->
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="view_product_image_form">
      <field name="name">product.image.form</field>
      <field name="model">product.image</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Imágenes">
          <sheet>
            <field name="image" widget="image" class="oe_avatar"/>
            <div class="oe_title">
              <label class="oe_edit_only" for="name" string="Product Name"/>
              <h1>
                <field name="name" readonly="1"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="product_tmpl_id" readonly="1"/>
                <field name="product_attribute_id"/>
                <field name="meli_imagen_bytes" readonly="1"/>
              </group>
              <group>
                <field name="meli_imagen_id" readonly="1"/>
                <field name="meli_imagen_link" readonly="1"/>
                <field name="meli_pub" readonly="1"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_product_image_kanban" model="ir.ui.view">
      <field name="name">product.image.kanban</field>
      <field name="model">product.image</field>
      <field name="arch" type="xml">
        <kanban string="Imagenes">
          <field name="name"/>
          <field name="product_attribute_id"/>
          <templates>
            <t t-name="kanban-box">
              <div style="position: relative">
                <a t-if="! read_only_mode" type="delete" style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
                <div class="oe_module_vignette">
                  <a type="open">
                    <img t-att-src="kanban_image('product.image', 'image', record.id.value)" class="oe_kanban_image" style="max-width: 90px; max-height: 90px;"/>
                  </a>
                  <div class="oe_module_desc">
                    <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border">
                      <table class="oe_kanban_table">
                        <tr>
                          <td class="oe_kanban_title1" align="left" valign="middle">
                            <h4>
                              <a type="open">
                                <field name="name"/>
                              </a>
                            </h4>
                            <field name="product_attribute_id"/>
                          </td>
                        </tr>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

  </data>
</odoo>
